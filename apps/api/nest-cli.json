{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"generateOptions": {
		"spec": false
	},
	"compilerOptions": {
		"deleteOutDir": true,
		"watchAssets": true,
		"assets": [
			{
				"include": "../public/**/*",
				"watchAssets": true,
				"outDir": "dist/public"
			}
		],
		"plugins": ["@nestjs/swagger"]
	}
}
